{
  "name": "@spautz/skip-the-build--sveltekit-v2-demo",
  "private": true,
  "description": "Svelte demo of skip-the-build, using the Vite adapter",
  "license": "MIT",
  "homepage": "https://github.com/spautz/skip-the-build/blob/main/demos/sveltekit-v2-demo#readme",
  "bugs": "https://github.com/spautz/skip-the-build/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spautz/skip-the-build.git",
    "directory": "demos/sveltekit-v2-demo"
  },
  "author": {
    "name": "Steven Pautz",
    "url": "https://stevenpautz.com"
  },
  "source": "./src/main.tsx",
  "type": "module",
  "scripts": {
    "____ HOOKS _________________________________________________________": "",
    "prepare": "svelte-kit sync || echo ''",
    "____ STANDARD PACKAGE TASKS ________________________________________": "",
    "all": "turbo run pipeline-all",
    "all:ci": "turbo run pipeline-ci --ui=stream",
    "build": "pnpm run build:clean && pnpm run build:main",
    "clean": "pnpm run \"/^.*:clean$/\" && rimraf --glob ./node_modules/.cache ./.turbo ./*.log",
    "dev": "vite",
    "lint": "biome check --write .",
    "lint:verify": "biome check .",
    "start": "vite preview",
    "test:clean": "rimraf ./coverage",
    "test": "pnpm run test:clean       && vitest run --coverage",
    "test:ci": "pnpm run test:clean    && vitest run --coverage --bail 1",
    "test:ui": "pnpm run test:clean    && vitest --ui",
    "test:watch": "pnpm run test:clean && vitest watch --coverage",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "____ BUILD & DEPLOY TASKS __________________________________________": "",
    "build:clean": "rimraf ./dist",
    "build:main": "vite build",
    "build:watch": "pnpm run build:clean && vite build --watch",
    "size-check": "source-map-explorer dist/**/*.js",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "storybook": "storybook dev -p 6006",
    "storybook:clean": "rimraf ./storybook-static",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@spautz/slow-package-example": "workspace:"
  },
  "devDependencies": {
    "@skip-the-build/vite": "workspace:",
    "@storybook/addon-a11y": "10.2.10",
    "@storybook/addon-docs": "10.2.10",
    "@storybook/sveltekit": "10.2.10",
    "@sveltejs/adapter-auto": "7.0.1",
    "@sveltejs/kit": "2.53.0",
    "@sveltejs/vite-plugin-svelte": "6.2.4",
    "@testing-library/svelte": "5.3.1",
    "@types/node": "catalog:",
    "storybook": "10.2.10",
    "svelte": "5.53.2",
    "svelte-check": "4.4.3",
    "typescript": "catalog:",
    "vite": "catalog:"
  }
}
