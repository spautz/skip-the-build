{
  "name": "@spautz/skip-the-build--vite-v7-example",
  "private": true,
  "description": "Vite demo of skip-the-build",
  "license": "MIT",
  "homepage": "https://github.com/spautz/skip-the-build/blob/main/demos/vite-v7-example#readme",
  "bugs": "https://github.com/spautz/skip-the-build/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spautz/skip-the-build.git",
    "directory": "demos/vite-v7-example"
  },
  "author": {
    "name": "Steven Pautz",
    "url": "https://stevenpautz.com"
  },
  "source": "./src/main.tsx",
  "type": "module",
  "scripts": {
    "____ STANDARD PACKAGE TASKS ________________________________________": "",
    "all": "turbo run pipeline-all",
    "all:ci": "turbo run pipeline-ci --ui=stream",
    "build": "pnpm run build:clean && pnpm run build:main",
    "clean": "pnpm run \"/^.*:clean$/\" && rimraf --glob ./node_modules/.cache ./.turbo ./*.log",
    "dev": "vite",
    "lint": "biome check --write .",
    "lint:verify": "biome check .",
    "start": "vite preview",
    "test:clean": "rimraf ./coverage",
    "test": "pnpm run test:clean       && vitest run --coverage",
    "test:ci": "pnpm run test:clean    && vitest run --coverage --bail 1",
    "test:ui": "pnpm run test:clean    && vitest --ui",
    "test:watch": "pnpm run test:clean && vitest watch --coverage",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "____ BUILD & DEPLOY TASKS __________________________________________": "",
    "build:clean": "rimraf ./dist",
    "build:main": "vite build",
    "build:watch": "pnpm run build:clean && vite build --watch",
    "size-check": "source-map-explorer dist/**/*.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "@spautz/slow-package-example": "workspace:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@skip-the-build/vite": "workspace:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "babel-plugin-react-compiler": "1.0.0",
    "typescript": "catalog:",
    "vite": "catalog:"
  }
}
