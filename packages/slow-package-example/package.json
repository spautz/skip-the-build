{
  "name": "@spautz/slow-package-example",
  "version": "0.1.0",
  "description": "A package which takes a long time to build, for demoing `skip-the-build`",
  "keywords": [],
  "license": "MIT",
  "homepage": "https://github.com/spautz/skip-the-build/blob/main/packages/slow-package-example#readme",
  "bugs": "https://github.com/spautz/skip-the-build/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spautz/skip-the-build.git",
    "directory": "packages/slow-package-example"
  },
  "author": {
    "name": "Steven Pautz",
    "url": "https://stevenpautz.com"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "tag": "next"
  },
  "files": [
    "dist/",
    "docs/",
    "src/",
    "LICENSE",
    "*.md"
  ],
  "source": "./src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "local-dev": "./src/index.ts",
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "____ HOOKS _________________________________________________________": "",
    "prepack": "pnpm run clean && turbo run build",
    "postpack": "pnpm run build:verifypack",
    "____ STANDARD PACKAGE TASKS ________________________________________": "",
    "all": "turbo run pipeline-all",
    "all:ci": "turbo run pipeline-ci --ui=stream",
    "build": "pnpm run build:clean && pnpm run build:lib && pnpm run build:verify",
    "clean": "pnpm run build:clean && pnpm run test:clean && rimraf --glob ./node_modules/.cache ./.turbo ./*.log",
    "dev": "pnpm run build:lib:watch",
    "lint": "biome check --write .",
    "lint:verify": "biome check .",
    "publish:yalc": "yalc publish --sig --push --replace",
    "test:clean": "rimraf ./coverage",
    "test": "echo 'Tests disabled for slow-package-example because they are .. just too slow'",
    "test:ci": "echo 'Tests disabled for slow-package-example because they are .. just too slow'",
    "test:ui": "echo 'Tests disabled for slow-package-example because they are .. just too slow'",
    "test:watch": "echo 'Tests disabled for slow-package-example because they are .. just too slow'",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "____ BUILD & VALIDATION TASKS ______________________________________": "",
    "build:clean": "rimraf --glob ./dist ./*.tgz",
    "build:lib": "tsdown --config ./tsdown.config.ts",
    "build:lib:watch": "tsdown --config ./tsdown.config.ts --watch",
    "build:verify": "publint --strict",
    "build:verifypack": "ls *.tgz | xargs -I {} attw {} --exclude-entrypoints internal-raw-src"
  },
  "dependencies": {},
  "devDependencies": {
    "@arethetypeswrong/cli": "catalog:",
    "@size-limit/esbuild": "catalog:",
    "@size-limit/esbuild-why": "catalog:",
    "@size-limit/file": "catalog:",
    "publint": "catalog:",
    "size-limit": "catalog:",
    "source-map-explorer": "catalog:",
    "tsdown": "catalog:"
  },
  "peerDependencies": {},
  "size-limit": [
    {
      "path": "./dist/esm/index.js",
      "import": "{}",
      "limit": "20 B"
    },
    {
      "path": "./dist/esm/index.js",
      "import": "{ helloWorld }",
      "limit": "50 B"
    }
  ]
}
