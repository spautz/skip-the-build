{
  "name": "skip-the-build",
  "version": "0.0.2",
  "description": "Speed up local dev by using local libraries without building them",
  "keywords": [],
  "license": "MIT",
  "homepage": "https://github.com/spautz/skip-the-build/blob/main/packages/skip-the-build#readme",
  "bugs": "https://github.com/spautz/skip-the-build/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spautz/skip-the-build.git",
    "directory": "packages/skip-the-build"
  },
  "author": {
    "name": "Steven Pautz",
    "url": "https://stevenpautz.com"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "tag": "next"
  },
  "files": [
    "dist/",
    "docs/",
    "src/",
    "LICENSE",
    "*.md"
  ],
  "source": "./src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "____ HOOKS _________________________________________________________": "",
    "prepack": "pnpm run clean && turbo run build",
    "postpack": "pnpm run build:verifypack",
    "____ STANDARD PACKAGE TASKS ________________________________________": "",
    "all": "turbo run pipeline-all",
    "all:ci": "turbo run pipeline-ci --ui=stream",
    "build": "pnpm run build:clean && pnpm run build:lib && pnpm run build:verify",
    "clean": "pnpm run build:clean && pnpm run test:clean && rimraf --glob ./node_modules/.cache ./.turbo ./*.log",
    "dev": "pnpm run build:lib:watch",
    "lint": "biome check --write .",
    "lint:verify": "biome check .",
    "publish:yalc": "yalc publish --sig --push --replace",
    "test:clean": "rimraf ./coverage",
    "test": "pnpm run test:clean       && vitest run --coverage",
    "test:ci": "pnpm run test:clean    && vitest run --coverage --bail 1",
    "test:ui": "pnpm run test:clean    && vitest --ui",
    "test:watch": "pnpm run test:clean && vitest watch --coverage",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "____ BUILD & VALIDATION TASKS ______________________________________": "",
    "build:clean": "rimraf --glob ./dist ./*.tgz",
    "build:lib": "tsdown --config ./tsdown.config.ts",
    "build:lib:watch": "tsdown --config ./tsdown.config.ts --watch",
    "build:verify": "publint --strict",
    "build:verifypack": "ls *.tgz | xargs -I {} attw {} --exclude-entrypoints internal-raw-src"
  },
  "dependencies": {
    "ci-info": "^4.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "catalog:",
    "publint": "catalog:",
    "source-map-explorer": "catalog:",
    "tsdown": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {}
}
